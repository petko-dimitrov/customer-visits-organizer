{% extends 'base.html.twig' %}

{% block main %}
    <div class="container body-content span=8 offset=2">
        <div class="well">
            <form class="form-horizontal" action="{{ path('add_address', {id: id}) }}" method="post">
                <fieldset>
                    <legend>Add Address for {{ customer.name }}</legend>
                    {% for error in errors %}
                        <div class="alert alert-danger">
                            <a href="#" class="close" data-dismiss="alert" aria-label="close">Ã—</a>
                            {{ error.message }}
                        </div>
                    {% endfor %}
                    <div class="form-group">
                        <label class="col-sm-4 control-label" for="town">Town</label>
                        <div class="col-sm-4 ">
                            <input class="form-control" id="town" placeholder="Town" name="address[town]"
                                   required type="text">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-4 control-label" for="street">Street</label>
                        <div class="col-sm-4 ">
                            <input class="form-control" id="street" placeholder="Street" name="address[street]"
                                   required type="text">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-4 control-label" for="number">Number</label>
                        <div class="col-sm-4 ">
                            <input class="form-control" id="street" placeholder="Number" name="address[number]"
                                   type="text">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-4 control-label" for="floor">Floor</label>
                        <div class="col-sm-4 ">
                            <input class="form-control" id="street" placeholder="Floor" name="address[floor]"
                                   type="number">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-4 control-label" for="apartment">Apartment</label>
                        <div class="col-sm-4 ">
                            <input class="form-control" id="apartment" placeholder="Apartment" name="address[apartment]"
                                   type="number">
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-4 col-sm-offset-4">
                            <a class="btn btn-default" href="{{ path('homepage') }}">Cancel</a>
                            <button type="submit" class="btn btn-primary">Add Address</button>
                        </div>
                    </div>

                    {{ form_row(address_form._token) }}
                </fieldset>
            </form>
        </div>
    </div>
{% endblock %}

